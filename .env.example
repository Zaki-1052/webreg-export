# UCSD WebReg Export Environment Configuration
# Copy this file to .env and update with your values

# Node Environment (development, production)
NODE_ENV=development

# Server Port
PORT=3000

# Admin Authentication
# Generate a secure token with: node scripts/generate-admin-token.js
# NEVER use the example token below in production!
ADMIN_TOKEN=your-secure-admin-token-here

# Optional: IP Whitelist for Admin Access
# Comma-separated list of allowed IPs
# ADMIN_IP_WHITELIST=127.0.0.1,::1

# Calendar Configuration
UCSD_CALENDAR_BASE_URL=https://blink.ucsd.edu/_files/SCI-tab/
QUARTERS_TO_MAINTAIN=6
CALENDAR_FETCH_TIMEOUT=10000

# Feature Flags
ENABLE_AUTO_UPDATES=false
ENABLE_ACADEMIC_CALENDAR=true
ENABLE_QUARTER_CLEANUP=true

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info